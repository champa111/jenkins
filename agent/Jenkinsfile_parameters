pipeline {
    agent any  

    parameters {
    choice choices: ['qa', 'test', 'dev', 'prod'], name: 'DEPLOY'
    }
 
    stages{
        stage ('BUILD'){
            steps{
                script{
                    def ENVIRONMENT = "${params.DEPLOY}"
                    if (ENVIRONMENT == 'test') {
                        echo "Deploying to TEST ...."
                    } else if (ENVIRONMENT == 'qa') {
                        echo "Deploying to qa ...."
                        
                        
                    }
                }
            }

            }
        }
    }
}